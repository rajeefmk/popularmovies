<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.udacitynanodegree.rajeefmk.popularmovies">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".PopularMoviesApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.MovieListActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.MovieDetailsActivity" />
        <activity android:name=".Activities.TrailerActivity" />
        <activity android:name=".Activities.ReviewActivity" />

        <meta-data
            android:name="AA_DB_NAME"
            android:value="Popularmovies.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1" />
    </application>

</manifest>
